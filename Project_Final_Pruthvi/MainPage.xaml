<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project_Final_Pruthvi.MainPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="20">
            <Label Text="Student Attendance Application" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,0,0,40" />

            <Button Text="View Students" Clicked="OnViewStudentsClicked" BackgroundColor="#3498DB" TextColor="White" CornerRadius="10" Padding="20,10" FontSize="20" />
            <Button Text="View Courses" Clicked="OnViewCoursesClicked" BackgroundColor="#E74C3C" TextColor="White" CornerRadius="10" Padding="20,10" FontSize="20" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
